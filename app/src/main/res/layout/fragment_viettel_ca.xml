<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpha.siminfo.viettel.ViettelCAFragment">


    <com.alpha.siminfo.view.CircleButton
        android:id="@+id/register_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:background_color="@color/orange_light"
        app:text="@string/register_service"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/ca3k_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.alpha.siminfo.view.CircleButton
        android:id="@+id/ca3k_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:background_color="@color/green_dark"
        app:text="@string/ca3k"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/cancel_button"
        android:layout_toLeftOf="@+id/cancel_button"
        android:layout_toStartOf="@+id/cancel_button" />

    <com.alpha.siminfo.view.CircleButton
        android:id="@+id/cancel_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:background_color="@color/red"
        app:text="@string/cancel_service"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ca_description"
        android:id="@+id/textView3"
        android:padding="10dp"
        android:layout_above="@+id/register_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
